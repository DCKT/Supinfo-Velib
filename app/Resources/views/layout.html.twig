{# app/Resources/views/layout.html.twig #}
 
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
 
    <title>{% block title %}Web-Project{% endblock %}</title>
 
    {% block stylesheets %}
      <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" type="text/css" />
    {% endblock %}
  </head>
 
  <body>
    <div class="container">
      <div id="header" class="hero-unit">
        <h1>Projet Web SUPINFO</h1>
        <p>Ce projet est propulsé par Symfony2, et construit grâce au tutoriel du siteduzero.</p>
        <p><a class="btn btn-primary btn-large" href="http://www.siteduzero.com/tutoriel-3-517569-symfony2.html">
          Lire le tutoriel »
        </a></p>
      </div>
 
      <div class="row">
        <div id="content" class="span9">
          {% block body %}
          {% endblock %}
        </div>
      </div>
 
      <hr>
 
      <footer style="text-align:center">
        <p>Projet Web SUPINFO</p>
      </footer>
    </div>
 
  {% block javascripts %}
    {# Ajoutez ces javascripts si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <script type="text/javascript" src="{{ asset('js/bootstrap.min.js') }}"></script>
  {% endblock %}
 
  </body>
</html>