{# app/Resources/views/layout.html.twig #}
 
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
 
    <title>{% block title %}Web-Project{% endblock %}</title>
 
    {% block stylesheets %}
      <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" type="text/css" />
      <link rel="stylesheet" type="text/css" href="{{ asset('css/custom.css') }}">
    {% endblock %}

    {% block javascripts %}
    {# Ajoutez ces javascripts si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <script type="text/javascript" src="{{ asset('js/bootstrap.min.js') }}"></script>
  {% endblock %}
  </head>
 
  <body>

<!-- Menu -->
    <div class="navbar navbar-inverse navbar-static-top">
      <div class="navbar-inner">
        <a class="brand" href="{{ path('index') }}">Bike 2.0</a>
        <ul class="nav">
            <li>
                <a href="{{ path('index') }}">
                    Home
                </a>
            </li>
            <li>
                <a href="{{ path('map') }}">
                    Map
                </a>
            </li>
             {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <li>
                    <a href="{{ path('favoris') }}">
                        Favoris
                    </a>
                </li>
             {% endif %}
        </ul>
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <li class="dropdown login-btn">
                    <a href="#" class="btn dropdown-toggle" data-toggle="dropdown">
                        {{ app.user.username }}
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu pull-right">
                        <li>
                                <a href="{{ path('fos_user_profile_edit')}}">
                                    Editer mon profil
                                </a>
                            </li>
                            <li class="divider"></li>
                        <li>
                            <a href="{{ path('fos_user_security_logout') }}">
                                Déconnexion
                            </a>
                        </li>
                    </ul>
                </li>
            {% else %}
                <a class="btn btn-success login-btn" href="{{ path('fos_user_security_login') }}">
                    Connexion
                </a>
            {% endif %}
      </div>
    </div>

<!-- Page -->
        <div class="container">
            <div class="row">
                <div id="content" class="span12">
                    {% block body %}
                    {% endblock %}
                </div>
            </div>
 <!-- Footer -->
        <footer style="text-align:center">
            <p>Projet Web SUPINFO</p>
        </footer>
    </div>
  </body>
</html>